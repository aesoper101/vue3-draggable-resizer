{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "removeComments": true,
    "baseUrl": ".",
    "outDir": "dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["types"],
    "types": ["vite/client"]
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.d.ts",
    "components/**/*.tsx",
    "components/**/*.vue"
  ],
  "exclude": ["node_modules", "public", "favicon.ico", "main.ts"]
}
